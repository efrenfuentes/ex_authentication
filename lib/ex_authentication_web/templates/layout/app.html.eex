<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="<%= static_path(@conn, "/img/apple-icon.png") %>" />
    <link rel="icon" type="image/png" href="<%= static_path(@conn, "/img/favicon.png") %>" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Ex Authentication</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />
    <!-- Bootstrap core CSS     -->
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/bootstrap.min.css") %>">
    <!--  Material Dashboard CSS    -->
    <link rel="stylesheet" href="<%= static_path(@conn, "/css/material-dashboard.css?v=1.2.0") %>">
    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300|Material+Icons' rel='stylesheet' type='text/css'>
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-color="purple" data-image="<%= static_path(@conn, "/images/sidebar.jpg") %>">
            <!--
        Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

        Tip 2: you can also add an image using data-image tag
    -->
            <div class="logo">
                <a href="#" class="simple-text">
                    Ex Authentication
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li <%= if @conn.request_path == "/groups" do %>class="active"<% end %>>
                        <a href="/groups">
                            <i class="material-icons">group</i>
                            <p>Groups</p>
                        </a>
                    </li>
                    <li <%= if @conn.request_path == "/users" do %>class="active"<% end %>>
                        <a href="/users">
                            <i class="material-icons">person</i>
                            <p>Users</p>
                        </a>
                    </li>
                    <li <%= if @conn.request_path == "/clients" do %>class="active"<% end %>>
                        <a href="/clients">
                            <i class="material-icons">computer</i>
                            <p>Clents</p>
                        </a>
                    </li>
                    <li <%= if @conn.request_path == "/abilities" do %>class="active"<% end %>>
                        <a href="/abilities">
                            <i class="material-icons">security</i>
                            <p>Abilities</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-transparent navbar-absolute">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#"> Ex Authentication </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <i class="material-icons">exit_to_app</i>
                                    <p class="hidden-lg hidden-md">Log Out</p>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <%= render @view_module, @view_template, assigns %>
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="/groups">
                                    Groups
                                </a>
                            </li>
                            <li>
                                <a href="/users">
                                    Users
                                </a>
                            </li>
                            <li>
                                <a href="/clients">
                                    Clients
                                </a>
                            </li>
                            <li>
                                <a href="/abilities">
                                    Abilities
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>
                        <a href="#">Efren Fuentes</a>, made with love for a better web
                    </p>
                </div>
            </footer>
        </div>
    </div>
</body>
<!--   Core JS Files   -->
<script src="<%= static_path(@conn, "/js/jquery-3.2.1.min.js") %>" type="text/javascript"></script>
<script src="<%= static_path(@conn, "/js/bootstrap.min.js") %>" type="text/javascript"></script>
<script src="<%= static_path(@conn, "/js/material.min.js") %>" type="text/javascript"></script>
<!--  Charts Plugin -->
<script src="<%= static_path(@conn, "/js/chartist.min.js") %>" type="text/javascript"></script>
<!--  Dynamic Elements plugin -->
<script src="<%= static_path(@conn, "/js/arrive.min.js") %>" type="text/javascript"></script>
<!--  PerfectScrollbar Library -->
<script src="<%= static_path(@conn, "/js/perfect-scrollbar.jquery.min.js") %>" type="text/javascript"></script>
<!--  Notifications Plugin    -->
<script src="<%= static_path(@conn, "/js/bootstrap-notify.js") %>" type="text/javascript"></script>
<!-- Material Dashboard javascript methods -->
<script src="<%= static_path(@conn, "/js/material-dashboard.js?v=1.2.0") %>" type="text/javascript"></script>
<script src="<%= static_path(@conn, "/js/app.js") %>"></script>

<script type="text/javascript">
    $(document).ready(function() {

        // Javascript method's body can be found in assets/js/demos.js
        demo.initDashboardPageCharts();

    });
</script>

</html>
